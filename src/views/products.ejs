<% include partials/_header %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <div class="table-responsive">
                
            <table class="table table-bordered table-hover">
                    <thead>
                        <th>NÂ°</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Provider</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </thead>
                    <tbody>
                        <% if(data){ %>
                            <% for(var i = 0; i < data.length; i++){ %>
                                <tr>
                                    <td><%= (i + 1) %></td>
                                    <td><%= data[i].name %></td>
                                    <td><%= data[i].category_id %></td>
                                    <td><%= data[i].provider_id %></td>
                                    <td><%= data[i].price %></td>
                                    <td><%= data[i].stock %></td>
                                    <td>
                                        <center><a href="/delete/<%= data[i].id %>"><button class="btn btn-danger">Delete</button></a>
                                        <a href="/update/<%= data[i].id %>"><button class="btn btn-info mt-1">Update</button></a></center>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card form">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input class="form-control m-1" type="text" name="name" placeholder="Product name">
                            <select class="form-control m-1" name="Category" id="">
                                <% for(var i = 0; i < data.length; i++){ %>
                                    <option value="<%= (i + 1) %>"><%= (i + 1) %></option>
                                <% } %>
                            </select>
                            <select class="form-control m-1" name="Provider" id="">
                                <% for(var i = 0; i < data.length; i++){ %>
                                    <option value="<%= (i + 1) %>"><%= (i + 1) %></option>
                                <% } %>
                            </select>
                            <input class="form-control m-1" type="text" name="price" placeholder="Product price">
                            <input class="form-control m-1" type="text" name="stock" placeholder="Product stock">
                        </div>
                        <button type="submit" class="btn btn-primary m-1">Save product</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/_footer %>