<% include partials/_header %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <div class="table-responsive">
                
            <table class="table table-bordered table-hover">
                    <thead>
                        <th>NÂ°</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>E-Mail</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </thead>
                    <tbody>
                        <% if(data){ %>
                            <% for(var i = 0; i < data.length; i++){ %>
                                <tr>
                                    <td><%= (i + 1) %></td>
                                    <td><%= data[i].provider_name %></td>
                                    <td><%= data[i].provider_phone %></td>
                                    <td><%= data[i].provider_email %></td>
                                    <td><%= data[i].provider_location %></td>
                                    <td>
                                        <center><a href="/delete-provider/<%= data[i].id %>"><button class="btn btn-danger">Delete</button></a>
                                        <a href="/update-provider-panel/<%= data[i].id %>"><button class="btn btn-info mt-1">Update</button></a></center>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card form">
                <div class="card-body">
                    <form action="/add-provider" method="POST">
                        <div class="form-group">
                            <input class="form-control m-1" type="text" name="name" placeholder="Provider name">
                            <input class="form-control m-1" type="text" name="phone" placeholder="Provider phone">
                            <input class="form-control m-1" type="text" name="email" placeholder="Provider E-Mail">
                            <input class="form-control m-1" type="text" name="location" placeholder="Provider location">
                        </div>
                        <button type="submit" class="btn btn-primary m-1">Save provider</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/_footer %>